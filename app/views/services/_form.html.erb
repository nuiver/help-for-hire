<%= form_for(service) do |f| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form_block">
    <div class="block_left">

      <!-- <%= f.label :category %>
      <%= f.select :category, [['IT'],['Gardening'],['Cleaning'],['Carpentry'], ['Electricity'], ['Plumbing']] %> -->
      <div class="field">
        <%= f.label "Gardening", :class => "h_category" %>
        <%= f.collection_check_boxes :task_ids, Task.where(category: "Gardening"), :id, :name do |b| %>
          <div class="collection-check-box">
            <table>
              <tr>
                <th><%= b.check_box %></th>
                <th><%= b.label %></th>
              </tr>
          </table>
          </div>
        <% end %>
      </div>
      <div class="field">
        <%= f.label "Electricity", :class => "h_category" %>
        <%= f.collection_check_boxes :task_ids, Task.where(category: "Electricity"), :id, :name do |b| %>
          <div class="collection-check-box">
            <table>
              <tr>
                <th><%= b.check_box %></th>
                <th><%= b.label %></th>
              </tr>
          </table>
          </div>
        <% end %>
      </div>
      <div class="field">
        <%= f.label "Cleaning", :class => "h_category" %>
        <%= f.collection_check_boxes :task_ids, Task.where(category: "Cleaning"), :id, :name do |b| %>
          <div class="collection-check-box">
            <table>
              <tr>
                <th><%= b.check_box %></th>
                <th><%= b.label %></th>
              </tr>
          </table>
          </div>
        <% end %>
      </div>
    </div>
    <div class="block_centre">
      <div class="field">
        <%= f.label "Carpentry", :class => "h_category" %>
        <%= f.collection_check_boxes :task_ids, Task.where(category: "Carpentry"), :id, :name do |b| %>
          <div class="collection-check-box">
            <table>
              <tr>
                <th><%= b.check_box %></th>
                <th><%= b.label %></th>
              </tr>
          </table>
          </div>
        <% end %>
      </div>
      <div class="field">
        <%= f.label "Plumbing", :class => "h_category" %>
        <%= f.collection_check_boxes :task_ids, Task.where(category: "Plumbing"), :id, :name do |b| %>
          <div class="collection-check-box">
            <table>
              <tr>
                <th><%= b.check_box %></th>
                <th><%= b.label %></th>
              </tr>
          </table>
          </div>
        <% end %>
      </div>
      <div class="field">
        <%= f.label "IT", :class => "h_category" %>
        <%= f.collection_check_boxes :task_ids, Task.where(category: "IT"), :id, :name do |b| %>
          <div class="collection-check-box">
            <table>
              <tr>
                <th><%= b.check_box %></th>
                <th><%= b.label %></th>
              </tr>
          </table>
          </div>
        <% end %>
      </div>

    </div>
    <div class="block_right">

      <div class="field">
        <%= f.label "Name for your service:" %>
        <%= f.text_field :name, :class => "field_right" %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, :class => "field_right" %>
      </div>

      <div class="field">
        <%= f.label "Available from:" %>
        <%= f.date_field :begin_date, :class => "field_right" %>
          <%= f.label "to:" %>
        <%= f.date_field :end_date, :class => "field_right" %>
      </div>

      <div class="field">
        <%= f.label :location %>
        <%= f.text_field :location, :class => "field_right" %>
      </div>

      <div class="field">
        <%= f.label :price %>
        <%= f.text_field :price, :class => "field_right" %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>



<% end %>
