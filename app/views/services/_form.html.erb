<%= form_for(service) do |f| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label "Available from:" %>
    <%= f.date_field :begin_date %>
      <%= f.label "to:" %>
    <%= f.date_field :end_date %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <%= f.label :category %>
  <%= f.select :category, [['IT'],['Gardening'],['Cleaning'],['Carpentry'], ['Electricity']] %>

  <div class="field">
    <%= f.label "Gardening" %>
    <%= f.collection_check_boxes :task_ids, Task.where(category: "Gardening"), :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "Electricity" %>
