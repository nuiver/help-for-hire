<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Tasks</th>
      <th>Begin date</th>
      <th>End date</th>
      <th>Location</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.description %></td>
        <td><%= service.category %></td>
        <td><%= service.list_of_tasks %></td>
        <td><%= service.begin_date %></td>
        <td><%= service.end_date %></td>
        <td><%= service.location %></td>
        <td><%= number_to_currency service.price, unit: 'â‚¬ ' %></td>
        <Td><%= service.user.email %></td>
        <td><%= link_to 'Show', service %></td>
        <td>
          <% if can? :update, service %>
            <%= link_to 'Edit', edit_service_path(service) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, service %>
            <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

